<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/tema"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/resultado"
        style="@style/visor"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp" />

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/lt_expressao"
        style="@style/visor"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botaoapagar"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="C"
            android:layout_weight="0.25"
            android:textSize='60sp'
            app:autoSizeTextType="none"
            app:fontFamily="serif-monospace" />

        <Button
            android:id="@+id/calc_porcentagem"
            style="@style/botao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="%"
            android:textSize="12sp"
            app:autoSizeTextType="uniform" />

        <Button

            android:id="@+id/calc_dividir"
            style="@style/botaoDestaque"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="รท"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:orientation="horizontal">

        <Button
            android:onClick="onPress"
            android:layout_margin="5dp"
            android:id="@+id/numero_sete"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="7"
            app:autoSizeTextType="uniform" />

        <Button
            android:layout_margin="5dp"
            android:onClick="onPress"
            android:id="@+id/numero_oito"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="8"
            app:autoSizeTextType="uniform" />

        <Button
            android:onClick="onPress"
            android:layout_margin="5dp"
            android:id="@+id/numero_nove"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="9"
            app:autoSizeTextType="uniform" />

        <Button
            android:id="@+id/operador_multiplicar"
            style="@style/botaoDestaque"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:onClick="clickOperation"
            android:text="ร"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:orientation="horizontal">

        <Button
            android:onClick="onPress"
            android:layout_margin="5dp"
            android:id="@+id/numero_quatro"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="4"
            app:autoSizeTextType="uniform" />

        <Button
            android:onClick="onPress"
            android:layout_margin="5dp"
            android:id="@+id/numero_cinco"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="5"
            app:autoSizeTextType="uniform" />

        <Button
            android:onClick="onPress"
            android:layout_margin="5dp"
            android:id="@+id/numero_seis"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="6"
            app:autoSizeTextType="uniform" />

        <Button
            android:onClick="clickOperation"
            android:layout_margin="5dp"
            android:id="@+id/calc_menos"
            style="@style/botaoDestaque"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="-"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:orientation="horizontal">

        <Button
            android:onClick="onPress"
            android:id="@+id/numero_um"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="1"
            app:autoSizeTextType="uniform" />

        <Button
            android:onClick="onPress"
            android:layout_margin="5dp"
            android:id="@+id/numero_dois"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="2"
            app:autoSizeTextType="uniform" />

        <Button
            android:onClick="onPress"
            android:layout_margin="5dp"
            android:id="@+id/numero_tres"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="3"
            app:autoSizeTextType="uniform" />

        <Button
            android:onClick="clickOperation"
            android:layout_margin="5dp"
            android:id="@+id/operador_soma"
            style="@style/botaoDestaque"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="+"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:orientation="horizontal">

        <Button
            android:layout_margin="5dp"
            android:id="@+id/numero_zero"
            style="@style/botao"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="0"
            app:autoSizeTextType="uniform"
            android:onClick="onPress"
            />


        <Button
            android:onClick="onPress"
            android:id="@+id/btn_ponto"
            android:layout_margin="5dp"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="."
            app:autoSizeTextType="uniform" />
        <Button
            android:layout_margin="5dp"
            style="@style/botao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="BackSpace"
            app:autoSizeTextType="uniform" />


        <Button
            android:id="@+id/btn_igual"
            android:layout_margin="5dp"
            style="@style/botaoDestaque"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="="
            app:autoSizeTextType="uniform" />


    </LinearLayout>

</LinearLayout>